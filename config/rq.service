[Unit]
Description=rq daemon
Requires=rq.socket
After=network.target

[Service]
PIDFile=/run/rq/pid
User=rq
Group=rq
WorkingDirectory=/home/rq/flask
ExecStart=/home/rq/flask/flask/bin/gunicorn --pid /run/rq/pid --access-logfile /home/rq/flask/rq.log app:app
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
